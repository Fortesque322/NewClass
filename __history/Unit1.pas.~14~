unit Unit1;


interface
  type
    TTransmission = array [1 .. 6] of integer;  // ак передать массив в параметры конструктора
    TDoors = (ThreeDoors, FiveDoors);
    TCar = class
  strict private
    FName : string;
    FColor : string;
    FCountry : string;
    FEngineStart : boolean;
    FMaxSpeed : integer;
    FDoors : TDoors;
    FTransmission : TTransmission;
    function GetColor: string;
    function GetCountry: string;
    function GetDoors: TDoors;
    function GetName: string;
    function GetSpeed: integer;
    function GetStartEngine: boolean;
    function GetTrans: TTransmission;
  public
    constructor Create(Speed : integer; Transmission : TTransmission; Doors : TDoors; Name, Color, Country:string; Engine : boolean);
    destructor Destroy;
    property NameCar : string read GetName write FName;
    property ColorCar : string read GetColor write Fcolor;
    property CountryCar : string read GetCountry write FCountry;
    property EngineStart : boolean read GetStartEngine write FEngineStart;
    property MaxSpeedCar : integer read GetSpeed write FMaxSpeed;
    property Doors: TDoors read GetDoors write FDoors;
    property Transmission : TTransmission read GetTrans write FTransmission;
    procedure SetName (Name : string);
    procedure SetColor (Color : string);
    procedure SetCounty (County : string);
    procedure SetEngine (Engine : boolean);
    procedure SetSpeed (Speed : integer);
    procedure SetDoors (Doors : TDoors);
    procedure SetTrans (Transmission : TTransmission);
  end;

implementation
{ TCar }

constructor TCar.Create(Speed: integer; Transmission : TTransmission; Doors : TDoors; Name, Color, Country:string; Engine : boolean);
  begin
    FName := Name;
    FColor := Color;
    FCountry := Country;
    FEngineStart := Engine;
    FMaxSpeed := Speed;
    FTransmission := Transmission;
    FDoors := Doors;
  end;

destructor TCar.Destroy;
begin

end;

function TCar.GetColor: string;
begin
  Result := Fcolor;
end;

function TCar.GetCountry: string;
begin
  Result := FCountry;
end;

function TCar.GetDoors: TDoors;
begin
  Result := FDoors;
end;

function TCar.GetName: string;
begin
  Result := FName;
end;

function TCar.GetSpeed: integer;
begin
  Result := FMaxSpeed;
end;

function TCar.GetStartEngine: boolean;
begin
  Result := FEngineStart;
end;

function TCar.GetTrans: TTransmission;
begin
  Result := FTransmission;
end;

procedure TCar.SetColor(Color: string);
  begin
    FColor := Color;
  end;

procedure TCar.SetCounty(County: string);
  begin
    FCountry := County;
  end;

procedure TCar.SetDoors(Doors: TDoors);
  begin
    FDoors := Doors;
  end;

procedure TCar.SetEngine(Engine: boolean);
  begin
    FEngineStart := Engine;
  end;

procedure TCar.SetName(Name: string);
  begin
    FName := Name;
  end;

procedure TCar.SetSpeed(Speed: integer);
  begin
    FMaxSpeed := Speed;
  end;

procedure TCar.SetTrans(Transmission: TTransmission);
  begin
    FTransmission := Transmission;
  end;

end.
